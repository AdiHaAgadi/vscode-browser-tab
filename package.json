{
  "name": "vscode-browser-tab",
  "displayName": "Browser Tab",
  "description": "Embedded browser panel inside VS Code.",
  "version": "0.1.0",
  "publisher": "AdiHaAgadi",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "browser",
    "preview",
    "webview",
    "localhost",
    "devtools"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-browser-tab.open",
        "title": "Open Browser Tab",
        "category": "Browser Tab",
        "icon": "$(globe)"
      },
      {
        "command": "vscode-browser-tab.navigate",
        "title": "Open URL in Browser Tab",
        "category": "Browser Tab",
        "icon": "$(search)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vscode-browser-tab.open",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscode-browser-tab.open",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "vscode-browser-tab.navigate",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      }
    ],
    "configuration": {
      "title": "Browser Tab",
      "properties": {
        "vscode-browser-tab.defaultUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Default URL to open when the browser tab is launched."
        },
        "vscode-browser-tab.autoReload": {
          "type": "boolean",
          "default": true,
          "description": "Automatically reload the browser tab when a workspace file is saved."
        },
        "vscode-browser-tab.hmrAware": {
          "type": "boolean",
          "default": true,
          "description": "Skip full-page auto-reload for file types handled by HMR tools (Vite, webpack, etc.). JS, TS, CSS, Vue, Svelte files will not trigger a reload — HMR handles those live."
        },
        "vscode-browser-tab.consoleOutput": {
          "type": "string",
          "enum": [
            "all",
            "warn",
            "error",
            "none"
          ],
          "enumDescriptions": [
            "Show all messages (log, info, debug, warn, error)",
            "Show warnings and errors only",
            "Show errors only",
            "Disable console mirroring"
          ],
          "default": "all",
          "description": "Minimum log level to mirror from the active localhost page to the 'Browser Tab — Console' Output Channel."
        },
        "vscode-browser-tab.networkInspector": {
          "type": "boolean",
          "default": true,
          "description": "Log fetch and XHR requests from the active localhost page to the 'Browser Tab — Network' Output Channel."
        },
        "vscode-browser-tab.terminalLinks": {
          "type": "boolean",
          "default": true,
          "description": "When enabled, clicking a URL in the terminal opens it in the Browser Tab. When disabled, URLs open in the system browser instead."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node .esbuild.mjs --minify",
    "build": "node .esbuild.mjs",
    "watch": "node .esbuild.mjs --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "package": "npx @vscode/vsce package",
    "release": "standard-version"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.20.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
